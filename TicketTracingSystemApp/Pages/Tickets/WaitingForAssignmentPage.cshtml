@page
@model TicketTracingSystemApp.Pages.Tickets.WaitingForAssignmentPageModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Subject</th>
                <th scope="col">Description</th>
                <th scope="col">Difficulty Level</th>
                <th scope="col">Priority</th>
                <th scope="col">Assign</th>
                <th scope="col">Save</th>
            </tr>
        </thead>
        <tbody>
            @for (int i=0; i< Model.Tickets.Count; i++)
            {
                if ( Model.Tickets[i].Statu == "WaitingForAssignment")
                {
                    <tr>
                        <td>@Model.Tickets[i].Subject</td>
                        <td>@Model.Tickets[i].Description>
                        <td>@Model.Tickets[i].LevelOfDifficulty</td>
                        <td>@Model.Tickets[i].Priority</td>
                        <td>
                            <select asp-for="SelectedList" asp-items="Model.Options">
                            </select>
                        </td>
                        <td>
                            @*<button class="btn btn-light">
                                <a asp-route-id="@item.Id" asp-page="Save" />
                                Assign
                                </button>*@
                            <input asp-route-id="@Model.Tickets[i].Id" type="submit" name="Save" value="Save" class="col" asp-page-handler="Save" />
                        </td>
                    </tr>
                }
            }
 
        </tbody>
    </table>
</form>
