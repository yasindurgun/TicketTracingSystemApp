@page
@model TicketTracingSystemApp.Pages.Tickets.CompletedTaskPageModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Ticket Number</th>
                <th scope="col">Subject</th>
                <th scope="col">Description</th>
                <th scope="col">Completed Date</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Tickets.Count; i++)
            {

                <tr>
                    <td>@Model.Tickets[i].Id</td>
                    <td>@Model.Tickets[i].Subject</td>
                    <td>@Model.Tickets[i].Description</td>
                    <td>@Model.Tickets[i].CompletedDate.ToShortDateString()</td>
                </tr>

            }

        </tbody>
    </table>
</form>